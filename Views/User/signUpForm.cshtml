@model projectsign.Models.signup
@{
    ViewData["Title"] = "signUpForm";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<form asp-action="" method="post">
    <div>
        <label asp-for="Name">Name </label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Surname">Surname </label>
        <input asp-for="Surname" />

    </div>
    <div>
        <label asp-for="Phone">Phone Number </label>
        <input asp-for="Phone" />
    </div>
    <div>
        <label asp-for="Pass">Password</label>
        <input asp-for="Pass" type="password" />
    </div>
    <div class="form-group">
        <input type="submit" value="sign up" class="btn btn-primary" />
        @ViewBag.message
    </div>
</form>
